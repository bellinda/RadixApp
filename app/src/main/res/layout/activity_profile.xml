            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="2"-->
                <!--android:text="Total"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@color/white"/>-->
        <!--</LinearLayout>-->
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
