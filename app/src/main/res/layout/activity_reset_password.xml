<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelova.w510.radixapp.ResetPasswordActivity"
    android:background="@drawable/sun"
    android:focusable="false">

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"
        android:id="@+id/top_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31"
        android:id="@+id/bottom_logo_guideline"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintBottom_toBottomOf="@id/bottom_logo_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/logo"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44"
        android:id="@+id/message_guideline"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/message_guideline"
        android:gravity="center"
        android:text="@string/login_reset_pass_message"
        android:textColor="@color/login_input_text_color"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        android:id="@+id/old_pass_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"
        android:id="@+id/top_old_pass_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13"
        android:id="@+id/left_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"
        android:id="@+id/right_guideline"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_items_color_transperent"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/old_pass_guideline"
        android:id="@+id/old_pass_underline"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/old_pass_underline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_old_pass_guideline"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_pass" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColorHint="@color/login_items_color"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/old_pass_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:gravity="bottom"
                android:hint="@string/login_reset_pass_old_pass"
                android:inputType="textPassword"
                android:textColor="@color/login_input_text_color"
                android:textColorHint="@color/login_items_color" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56"
        android:id="@+id/top_password_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        android:id="@+id/password_guideline"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_items_color_transperent"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/password_guideline"
        android:id="@+id/password_underline"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintBottom_toTopOf="@id/password_underline"
        app:layout_constraintTop_toBottomOf="@+id/top_password_guideline"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pass"
            android:layout_gravity="bottom"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/login_items_color"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:hint="@string/login_reset_pass_new_pass"
                android:textColor="@color/login_input_text_color"
                android:textColorHint="@color/login_items_color"
                android:background="@android:color/transparent"
                android:id="@+id/new_password_input"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"
        android:id="@+id/top_confirm_password_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        android:id="@+id/confirm_password_guideline"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_items_color_transperent"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_guideline"
        android:id="@+id/confirm_password_underline"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintBottom_toTopOf="@id/confirm_password_underline"
        app:layout_constraintTop_toBottomOf="@+id/top_confirm_password_guideline"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star"
            android:layout_gravity="bottom"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/login_items_color"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:hint="@string/login_reset_pass_confirm_password"
                android:textColor="@color/login_input_text_color"
                android:textColorHint="@color/login_items_color"
                android:background="@android:color/transparent"
                android:id="@+id/confirm_password_input"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86"
        android:id="@+id/top_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"
        android:id="@+id/bottom_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19"
        android:id="@+id/left_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81"
        android:id="@+id/right_btn_guideline"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/left_btn_guideline"
        app:layout_constraintRight_toRightOf="@id/right_btn_guideline"
        app:layout_constraintTop_toTopOf="@id/top_btn_guideline"
        app:layout_constraintBottom_toTopOf="@id/bottom_btn_guideline"
        android:background="@drawable/login_btn_background"
        android:text="@string/login_reset_pass_send"
        android:textColor="@color/login_btn_text_color"
        android:textAllCaps="false"
        android:textSize="@dimen/login_btn_title_size"
        android:id="@+id/send_btn"
        android:gravity="center"
        android:foregroundGravity="center"/>

</android.support.constraint.ConstraintLayout>

