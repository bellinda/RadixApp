<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelova.w510.radixapp.LoginActivity"
    android:background="@drawable/sun">

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19"
        android:id="@+id/top_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"
        android:id="@+id/bottom_logo_guideline"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintBottom_toBottomOf="@id/bottom_logo_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/logo"/>


    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56"
        android:id="@+id/email_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13"
        android:id="@+id/left_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"
        android:id="@+id/right_guideline"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_items_color_transperent"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/email_guideline"
        android:id="@+id/email_underline"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintBottom_toTopOf="@id/email_underline"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/login_email_hint"
            android:textColor="@color/login_items_color"
            android:textColorHint="@color/login_items_color"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/email_input"
            android:inputType="textEmailAddress"
            android:focusable="false"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"
        android:id="@+id/password_guideline"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_items_color_transperent"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/password_guideline"
        android:id="@+id/password_underline"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintBottom_toTopOf="@id/password_underline"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pass"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/login_password_hint"
            android:textColor="@color/login_items_color"
            android:textColorHint="@color/login_items_color"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/password_input"
            android:inputType="textPassword"
            android:focusable="false"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78"
        android:id="@+id/top_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        android:id="@+id/bottom_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19"
        android:id="@+id/left_btn_guideline"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81"
        android:id="@+id/right_btn_guideline"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/left_btn_guideline"
        app:layout_constraintRight_toRightOf="@id/right_btn_guideline"
        app:layout_constraintTop_toTopOf="@id/top_btn_guideline"
        app:layout_constraintBottom_toTopOf="@id/bottom_btn_guideline"
        android:background="@drawable/login_btn_background"
        android:text="@string/login_btn_title"
        android:textColor="@color/login_btn_text_color"
        android:textAllCaps="false"
        android:textSize="@dimen/login_btn_title_size"
        android:id="@+id/login_btn"
        android:gravity="center"
        android:foregroundGravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/login_btn_text_color"
        android:text="@string/login_forgot_pass_text"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:id="@+id/forgot_pass"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/sign_up_guideline"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_guideline"
        android:text="@string/login_no_account_text"
        android:textColor="@color/login_btn_text_color"
        android:gravity="center"
        android:id="@+id/sign_up"/>
</android.support.constraint.ConstraintLayout>
