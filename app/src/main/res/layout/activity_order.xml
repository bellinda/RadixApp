<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelova.w510.radixapp.menuItems.OrderActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/android_appbar_layout"
            android:layout_height="220dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayoutAndroidExample"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/parallax_header_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:background="@drawable/writing_machine"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.8" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_android"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/nested_scroll_view"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/linear_layout_android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/order_from_offer_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/order_from_offer_title"
                            android:textSize="@dimen/labels_text_size" />

                        <android.support.constraint.Guideline
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.75"
                            android:id="@+id/right_rg_guideline" />

                        <info.hoang8f.android.segmented.SegmentedGroup
                            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/segm_gr_has_offer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/order_from_offer_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/right_rg_guideline"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="0dp"
                            segmentedgroup:sc_tint_color="@color/menu_icons_color"
                            segmentedgroup:sc_checked_text_color="#ffffff"
                            android:weightSum="2"
                            android:layout_marginTop="20dp">

                            <RadioButton
                                android:id="@+id/have_offer"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/order_has_offer"
                                />

                            <RadioButton
                                android:id="@+id/not_have_offer"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/order_not_has_offer"
                                android:checked="true"/>
                        </info.hoang8f.android.segmented.SegmentedGroup>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/segm_gr_has_offer"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:id="@+id/offer_id_label"
                            android:text="@string/order_enter_offer_id_text"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/offer_id_label"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/offer_id_input_layout"
                            android:weightSum="7"
                            android:visibility="gone">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:id="@+id/offer_id_input"
                                android:visibility="visible"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/ic_check"
                                android:layout_marginStart="10dp"
                                android:id="@+id/send_offer_id_btn"/>
                        </LinearLayout>



                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_full_name"
                            android:textSize="@dimen/labels_text_size" />

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/name_label"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/radio_group_name"
                            android:layout_marginTop="10dp"
                            android:checkedButton="@+id/default_name">

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Someone Else"
                                android:id="@+id/default_name"/>

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Use another name for this order"
                                android:id="@+id/other_name"/>
                        </RadioGroup>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/radio_group_name"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/name_input"
                            android:visibility="gone"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/languages_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_languages"
                            android:textSize="@dimen/labels_text_size" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/languages_label"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="20dp"
                            android:weightSum="8"
                            android:id="@+id/from_lang_layout">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/offer_language_from"
                                android:textSize="14sp"
                                android:id="@+id/from_lang_label"
                                android:layout_weight="4"
                                android:gravity="center|left"
                                android:textColor="@android:color/black"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/spinner_bgr"
                                android:orientation="horizontal"
                                android:layout_weight="4">

                                <Spinner
                                    android:id="@+id/from_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/arrow" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/from_lang_layout"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="10dp"
                            android:weightSum="8">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/offer_language_to"
                                android:textSize="14sp"
                                android:id="@+id/to_lang_label"
                                android:layout_weight="4"
                                android:gravity="center|left"
                                android:textColor="@android:color/black"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/spinner_bgr"
                                android:orientation="horizontal"
                                android:layout_weight="4">

                                <Spinner
                                    android:id="@+id/to_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/arrow" />
                            </RelativeLayout>
                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/order_type_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_order_type"
                            android:textSize="@dimen/labels_text_size" />

                        <info.hoang8f.android.segmented.SegmentedGroup
                            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/segm_gr_order_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/order_type_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="0dp"
                            segmentedgroup:sc_tint_color="@color/menu_icons_color"
                            segmentedgroup:sc_checked_text_color="#ffffff"
                            android:weightSum="2"
                            android:layout_marginTop="20dp">

                            <RadioButton
                                android:id="@+id/express_order"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/offer_express_order"
                                />

                            <RadioButton
                                android:id="@+id/normal_order"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/offer_normal_order" />
                        </info.hoang8f.android.segmented.SegmentedGroup>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/translation_type_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_translation_type"
                            android:textSize="@dimen/labels_text_size" />

                        <info.hoang8f.android.segmented.SegmentedGroup
                            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/segm_gr_transl_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/translation_type_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="0dp"
                            segmentedgroup:sc_tint_color="@color/menu_icons_color"
                            segmentedgroup:sc_checked_text_color="#ffffff"
                            android:weightSum="2"
                            android:layout_marginTop="20dp">

                            <RadioButton
                                android:id="@+id/special_transl"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/offer_translation_special"
                                />

                            <RadioButton
                                android:id="@+id/non_special_transl"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/offer_translation_normal" />
                        </info.hoang8f.android.segmented.SegmentedGroup>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/notes_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_description"
                            android:textSize="@dimen/labels_text_size" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/notes_label"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_edit_text"
                            android:id="@+id/notes_input"
                            android:gravity="top|start"
                            android:padding="5dp"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical"
                            android:maxLines="20"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/email_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_email"
                            android:textSize="@dimen/labels_text_size" />

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/email_label"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/radio_group_email"
                            android:layout_marginTop="10dp"
                            android:checkedButton="@+id/default_email_rb">

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="someone.else@gmail.com"
                                android:id="@+id/default_email_rb"/>

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Use another email for this order"
                                android:id="@+id/new_email_rb"/>
                        </RadioGroup>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/radio_group_email"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/email_input"
                            android:inputType="textEmailAddress"
                            android:visibility="gone"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/phone_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_phone"
                            android:textSize="@dimen/labels_text_size" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/phone_label"
                            android:layout_marginTop="10dp"
                            android:id="@+id/phone_input"
                            android:inputType="phone"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/expected_delivery_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/order_delivery_date"
                            android:textSize="@dimen/labels_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/expected_delivery_label"
                            android:text="@string/order_delivery_date_text"
                            android:id="@+id/expected_delivery_date_description"
                            android:layout_marginTop="20dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/expected_delivery_date_description"
                            android:weightSum="8"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:text="01/31/2018"
                                android:id="@+id/delivery_date_text"
                                android:background="@drawable/spinner_bgr"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textSize="@dimen/date_text_size"
                                android:textColor="@color/menu_icons_color"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_date"
                                    android:id="@+id/select_date_btn"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:contentPadding="20dp"
                    card_view:cardElevation="7dp"
                    card_view:cardMaxElevation="10dp"
                    android:layout_margin="10dp">

                    <android.support.constraint.ConstraintLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/documents_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:text="@string/offer_select_document"
                            android:textSize="@dimen/labels_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/documents_label"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/red_border"
                            android:id="@+id/select_documents_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_add_document"
                                android:padding="20dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/select_documents_layout"
                            android:textColor="@color/menu_icons_color"
                            android:textSize="@dimen/labels_text_size"
                            android:text="@string/offer_selected_documents"
                            android:id="@+id/selected_files"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"/>

                        <me.gujun.android.taggroup.TagGroup
                            android:id="@+id/tag_group"
                            style="@style/TagGroup.Red"
                            app:layout_constraintTop_toBottomOf="@+id/selected_files"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.constraint.ConstraintLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <android.support.constraint.Guideline
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"
                        android:id="@+id/left_guideline" />

                    <android.support.constraint.Guideline
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75"
                        android:id="@+id/right_guideline" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                        app:layout_constraintRight_toRightOf="@+id/right_guideline"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/button_with_click"
                            android:text="@string/offer_submit"
                            android:textAllCaps="false"
                            android:textColor="@color/menu_icons_color"
                            android:textSize="@dimen/labels_text_size"
                            android:id="@+id/submit_btn"/>

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/submit_loader"
                            android:visibility="gone"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>