<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelova.w510.radixapp.MainActivity"
    android:background="#4cceb18c">

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38"
        android:id="@+id/menu_top_guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:id="@+id/image_bottom_guideline" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_bottom_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        card_view:cardElevation="7dp"
        card_view:cardMaxElevation="10dp"
        app:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/work2" />

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_top_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#79300605"
        android:visibility="gone"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/left_left_card_guideline_2" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"
        android:id="@+id/right_left_card_guideline_2" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"
        android:id="@+id/bottom_up_card_guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52"
        android:id="@+id/left_right_card_guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/right_right_card_guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68"
        android:id="@+id/upper_card_guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96"
        android:id="@+id/bottom_card_guideline" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="7dp"
        card_view:cardMaxElevation="10dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_left_card_guideline_2"
        app:layout_constraintRight_toLeftOf="@+id/right_left_card_guideline_2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_up_card_guideline"
        app:layout_constraintTop_toTopOf="@+id/menu_top_guideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/menu_items_top_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/menu_items_bottom_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.97" />

            <android.support.constraint.Guideline
                android:id="@+id/menu_left_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/menu_right_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:id="@+id/offer_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/menu_left_guideline"
                app:layout_constraintRight_toLeftOf="@+id/menu_right_guideline"
                app:layout_constraintTop_toTopOf="@+id/menu_items_top_guideline"
                app:layout_constraintBottom_toTopOf="@+id/menu_items_bottom_guideline"
                android:weightSum="8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_offer"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_offer"
                    android:textColor="@color/menu_icons_color"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_weight="2"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="7dp"
        card_view:cardMaxElevation="10dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_right_card_guideline"
        app:layout_constraintRight_toLeftOf="@+id/right_right_card_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_up_card_guideline"
        app:layout_constraintTop_toTopOf="@+id/menu_top_guideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/menu_items_right_top_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/menu_items_right_bottom_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.97" />

            <android.support.constraint.Guideline
                android:id="@+id/right_menu_left_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/right_menu_right_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:id="@+id/order_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/right_menu_left_guideline"
                app:layout_constraintRight_toLeftOf="@+id/right_menu_right_guideline"
                app:layout_constraintTop_toTopOf="@+id/menu_items_right_top_guideline"
                app:layout_constraintBottom_toTopOf="@+id/menu_items_right_bottom_guideline"
                android:weightSum="8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_order"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_order"
                    android:textColor="@color/menu_icons_color"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_weight="2"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="7dp"
        card_view:cardMaxElevation="10dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_left_card_guideline_2"
        app:layout_constraintRight_toLeftOf="@+id/right_left_card_guideline_2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_card_guideline"
        app:layout_constraintTop_toTopOf="@+id/upper_card_guideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/prices_top_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/prices_bottom_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.97" />

            <android.support.constraint.Guideline
                android:id="@+id/prices_left_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/prices_right_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:id="@+id/prices_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/prices_left_guideline"
                app:layout_constraintRight_toLeftOf="@+id/prices_right_guideline"
                app:layout_constraintTop_toTopOf="@+id/prices_top_guideline"
                app:layout_constraintBottom_toTopOf="@+id/prices_bottom_guideline"
                android:weightSum="8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_prices"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_prices"
                    android:textColor="@color/menu_icons_color"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_weight="2"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="7dp"
        card_view:cardMaxElevation="10dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_right_card_guideline"
        app:layout_constraintRight_toLeftOf="@+id/right_right_card_guideline"
        app:layout_constraintBottom_toTopOf="@+id/bottom_card_guideline"
        app:layout_constraintTop_toTopOf="@+id/upper_card_guideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/profile_top_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/profile_bottom_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.97" />

            <android.support.constraint.Guideline
                android:id="@+id/profile_left_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/profile_right_guideline"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:id="@+id/profile_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@+id/profile_left_guideline"
                app:layout_constraintRight_toLeftOf="@+id/profile_right_guideline"
                app:layout_constraintTop_toTopOf="@+id/profile_top_guideline"
                app:layout_constraintBottom_toTopOf="@+id/profile_bottom_guideline"
                android:weightSum="8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_profile"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_profile"
                    android:textColor="@color/menu_icons_color"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_weight="2"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
